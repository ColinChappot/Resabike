head
    link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
    link(type='text/css', rel='stylesheet', href='/materialize/css/materialize.min.css', media='screen,projection')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')

body
    script(type='text/javascript', src='https://code.jquery.com/jquery-3.2.1.min.js')
    script(type='text/javascript', src='/materialize/js/materialize.min.js')

    block content
        nav
            .nav-wrapper
                a.brand-logo(href='#') RESABIKE
                |
                ul#nav-mobile.right.hide-on-med-and-down
                    li
                        a(href='sass.html') CONTACTS
                    |
                    li
                        a(href='badges.html') LANGUES
                    |
                    li
                        a(href='collapsible.html') LOGIN
        div
            label Reservation
            form(action ='/user', method='GET')
                button(type ='Submit') Cancel Reservation
            table
                tbody
                    tr(width='33%')
                        td
                            label(for='idGroupName',width='33%') GroupName
                        td
                            input(type='text', id='idGroupName', name='groupName', placeholder='Type your GroupName here')

                    tr(width='33%')
                        td
                            label(for='idBikeNumber') Bike Number
                        td
                            input(type='text', id='idBikeNumber',name='bikeNumber', placeholder='Type your BikeNumber here')

                    tr(width='33%')
                        td
                            label(for='idRemarqus',width='33%') Remarqus
                        td
                            input(type='text', id='idRemarqus', name='remarks', placeholder='Type your remarqus if you have')


            form(action ='/user/reservation/' , method='POST')
                button(type ='Submit') send reservation

