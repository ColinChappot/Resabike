extends layout

block script
    link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
    link(type='text/css', rel='stylesheet', href='/materialize/css/materialize.min.css', media='screen,projection')
    link(href='/stylesheets/jquery-ui.min.css', rel='stylesheet')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    script(type='text/javascript', src='https://code.jquery.com/jquery-3.2.1.min.js')
    script(type='text/javascript', src='/materialize/js/materialize.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.4/jquery.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.13.0/moment.min.js')
    script(src='/javascripts/dbCompletion.js')
    script(src='/javascripts/apiTrajet.js')

block content

        div
            Label your search, your way
            br
            table
                thead
                    tr
                        th Date
                        th
                        th
                        th Departure
                        th Destination
                tbody
                    tr
                        td
                            input.form-control(type='date', name='date', id='date')
                        td
                            input(type='text', id='from', name='from', placeholder='choose your departure',size='35',onkeydown='autocomp(this.id)', required=true)
                        td
                           input(type='text', id='to', name='to', placeholder='Choose your destination',size='35',onkeydown='autocomp(this.id)', required=true)
                        td
                            button(onclick='search()' type='none') search

        center
            font(color="red") #{erreur}
        br
        div(name='mydivs' )
            table(id='auto')
                thead
                    tr
                        th Date
                        th Departure
                        th Destination
                        th Reservation
                tbody

