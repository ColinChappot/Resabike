extends layout

block content
    div
        form(action ='/admin/a_line/' , method='GET')
            button(type ='Submit') Back to line
        br
        form(action ='/admin/a_line/a_station/delete', method='Post')
            input(hidden=true, type='text', value=line.id_line, name='id_line')
            button(type ='Submit') delete
        Label line

            each station in stations
                table

                    thead
                        tr(width='20%')
                            th name
                            th stopId

                    tbody
                        tr(width='20%')
                            td name #{station.name}
                            td departure #{station.stopid}

